@model IEnumerable<HShop.ViewModels.HangHoaVM>

@{
	ViewData["Title"] = "Shop";
	Layout = "_DanhSachHangHoa";
}

@section BreadCum {
	<div class="container-fluid page-header py-5">
		<h1 class="text-center text-white display-6">Shop</h1>
		<ol class="breadcrumb justify-content-center mb-0">
			<li class="breadcrumb-item"><a href="/">Home</a></li>
			<li class="breadcrumb-item"><a href="#">Pages</a></li>
			<li class="breadcrumb-item active text-white">Shop</li>
		</ol>
	</div>
}

<!-- ======== DANH SÁCH SẢN PHẨM ======== -->
<div class="container py-5">
	<div class="row g-4">
		@foreach (var item in Model)
		{
			<div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
				<div class="card text-center border-0 shadow-sm p-2 h-100">
					<img src="~/Hinh/HangHoa/@item.Hinh" alt="@item.TenHH"
						 class="card-img-top" style="height:250px; object-fit:cover; border-radius:10px;" />
					<div class="card-body">
						<h6 class="card-title fw-bold text-truncate">@item.TenHH</h6>
						<p class="text-success fw-semibold mb-1">@item.DonGia.ToString("N0") ₫</p>
						<a asp-controller="HangHoa" asp-action="Detail" asp-route-id="@item.MaHh"
						   class="btn btn-outline-primary btn-sm rounded-pill px-3">
							Xem chi tiết
						</a>
					</div>
				</div>
			</div>
		}
	</div>

	<!-- ======== PHÂN TRANG ======== -->
	@if (ViewBag.TotalPages > 1)
	{
		<div class="col-12">
			<div class="pagination d-flex justify-content-center mt-5">
				@if (ViewBag.CurrentPage > 1)
				{
					<a href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, loai = ViewBag.Loai, minPrice = ViewBag.MinPrice, maxPrice = ViewBag.MaxPrice, filter = ViewBag.Filter })" class="rounded">&laquo;</a>
				}
				@for (int i = 1; i <= ViewBag.TotalPages; i++)
				{
					if (i == ViewBag.CurrentPage)
					{
						<a href="#" class="rounded active">@i</a>
					}
					else
					{
						<a href="@Url.Action("Index", new { page = i, loai = ViewBag.Loai, minPrice = ViewBag.MinPrice, maxPrice = ViewBag.MaxPrice, filter = ViewBag.Filter })" class="rounded">@i</a>
					}
				}
				@if (ViewBag.CurrentPage < ViewBag.TotalPages)
				{
					<a href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, loai = ViewBag.Loai, minPrice = ViewBag.MinPrice, maxPrice = ViewBag.MaxPrice, filter = ViewBag.Filter })" class="rounded">&raquo;</a>
				}
			</div>
		</div>
	}
</div>

<!-- ======== CSS PHÂN TRANG ======== -->
<style>
	.pagination a {
		color: #333;
		padding: 8px 14px;
		margin: 0 4px;
		border: 1px solid #ccc;
		text-decoration: none;
		border-radius: 5px;
		transition: background 0.2s;
	}

		.pagination a.active {
			background-color: #198754;
			color: #fff;
			border-color: #198754;
		}

		.pagination a:hover {
			background-color: #0d6efd;
			color: #fff;
		}
</style>
