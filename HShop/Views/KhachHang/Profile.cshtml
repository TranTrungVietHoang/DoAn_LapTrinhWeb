@model HShop.Data.KhachHang
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    Layout = "_LayoutCustomer";
}

<!-- PHẦN TIÊU ĐỀ -->
<div class="container-fluid profile-header py-5 mb-5" style="background: linear-gradient(90deg, #5cb85c, #8fd19e);">
    <h1 class="text-center text-white display-6 fw-bold">Thông tin cá nhân</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="/" class="text-white text-decoration-none">Home</a></li>
        <li class="breadcrumb-item active text-white">Profile</li>
    </ol>
</div>

<!-- PHẦN NỘI DUNG CHÍNH -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header text-white text-center py-4" style="background: linear-gradient(90deg, #6ab04c, #badc58);">
                    <div class="d-flex flex-column align-items-center">
                        <img src="~/Hinh/KhachHang/@(Model.Hinh ?? "noavatar.png")"
                             alt="Ảnh đại diện"
                             class="rounded-circle border border-4 border-white shadow-sm"
                             style="width:130px; height:130px; object-fit:cover;" />
                        <h3 class="mt-3 mb-0 fw-bold">@Model.HoTen</h3>
                        <p class="text-dark-50 mb-0">Thành viên HShop</p>
                    </div>
                </div>

                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3 text-success border-bottom pb-2">Thông tin cá nhân</h5>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p class="mb-1 fw-semibold text-secondary">Tên đăng nhập:</p>
                            <div class="form-control bg-light">@Model.MaKh</div>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1 fw-semibold text-secondary">Giới tính:</p>
                            <div class="form-control bg-light">@(Model.GioiTinh ? "Nam" : "Nữ")</div>
                        </div>
                        <div class="col-md-6 mt-3">
                            <p class="mb-1 fw-semibold text-secondary">Email:</p>
                            <div class="form-control bg-light">@Model.Email</div>
                        </div>
                        <div class="col-md-6 mt-3">
                            <p class="mb-1 fw-semibold text-secondary">Điện thoại:</p>
                            <div class="form-control bg-light">@(Model.DienThoai ?? "Chưa cập nhật")</div>
                        </div>
                        <div class="col-md-12 mt-3">
                            <p class="mb-1 fw-semibold text-secondary">Địa chỉ:</p>
                            <div class="form-control bg-light">@(Model.DiaChi ?? "Chưa cập nhật")</div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center mt-4">
                        <a asp-action="UpdateProfile" asp-controller="KhachHang"
                           class="btn btn-success rounded-pill px-4 me-2 shadow-sm">
                            <i class="fa fa-edit me-2"></i>Cập nhật thông tin
                        </a>
                        <a asp-action="DangXuat" asp-controller="KhachHang"
                           class="btn btn-outline-danger rounded-pill px-4 shadow-sm">
                            <i class="fa fa-sign-out-alt me-2"></i>Đăng xuất
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CSS TÙY CHỈNH -->
<style>
    /* Đổi class từ page-header -> profile-header để tránh xung đột template */
    .profile-header {
        position: relative !important;
        z-index: 1 !important;
        pointer-events: auto !important;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #e0e0e0;
        font-size: 0.95rem;
    }

    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.01);
        }

    .btn {
        font-weight: 600;
    }

    .btn-success {
        background: linear-gradient(90deg, #27ae60, #2ecc71);
        border: none;
    }

        .btn-success:hover {
            background: linear-gradient(90deg, #219150, #28b463);
        }

    .btn-outline-danger {
        border: 2px solid #e74c3c;
    }

        .btn-outline-danger:hover {
            background-color: #e74c3c;
            color: white;
        }
</style>
