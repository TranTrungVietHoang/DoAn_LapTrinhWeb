@model IEnumerable<HShop.Data.HoaDon>

<div class="container py-4">
    <h2 class="mb-4 text-primary">Lịch sử mua sắm</h2>
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-secondary">
                <tr>
                    <th scope="col">Mã đơn</th>
                    <th scope="col">Ngày đặt</th>
                    <th scope="col">Trạng thái</th>
                    <th scope="col">Ghi chú</th>
                    <th scope="col" class="text-center">Xem chi tiết</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaHd</td>
                        <td>@item.NgayDat.ToString("dd/MM/yyyy")</td>
                        <td>@item.MaTrangThaiNavigation?.TenTrangThai</td>
                        <td>@item.GhiChu</td>
                        <td class="text-center">
                            <a asp-controller="HoaDon" asp-action="Detail" asp-route-id="@item.MaHd" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye"></i> Xem chi tiết
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>