@{
    Layout = "_LayoutCustomer";
}

<!-- Single Page Header start -->
@RenderSection("BreadCum", required: false)
<!-- Single Page Header End -->
<!-- Fruits Shop Start-->
<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <h1 class="mb-4">HSHOP</h1>
        <div class="row g-4">
            <div class="col-lg-12">
                <div class="row g-4">
                    <div class="col-xl-3">
                        @await Html.PartialAsync("_TimKiemPanel")
                    </div>

                    <div class="col-6"></div>

                    <div class="col-xl-3">
                        <div class="bg-light ps-3 py-3 rounded d-flex justify-content-between mb-4">
                            <label for="fruits">Sắp xếp:</label>
                            <select id="fruits" name="fruitlist" class="border-0 form-select-sm bg-light me-3" form="fruitform">
                                <option value="volvo">Mặc định</option>
                                <option value="saab">Phổ biến</option>
                                <option value="opel">Mới nhất</option>
                                <option value="audi">Giá cao → thấp</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row g-4">
                    <!-- 🔹 SIDEBAR TRÁI -->
                    <div class="col-lg-3">
                        <div class="row g-4">
                            <!-- Danh mục -->
                            @await Component.InvokeAsync("MenuLoai")

                            <!-- Bộ lọc giá và Additional -->
                            <div class="col-lg-12">
                                <div class="mb-3 border rounded p-3 bg-light shadow-sm">
                                    <h4 class="mb-3">Lọc sản phẩm</h4>

                                    <form method="get" asp-controller="HangHoa" asp-action="Index">
                                        <!-- Giá -->
                                        <label class="fw-semibold small mb-1">Khoảng giá (₫)</label>
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <input type="number" name="minPrice" value="@ViewBag.MinPrice" class="form-control form-control-sm me-2" placeholder="Từ" />
                                            <input type="number" name="maxPrice" value="@ViewBag.MaxPrice" class="form-control form-control-sm" placeholder="Đến" />
                                        </div>

                                        <input type="range" id="priceRange" class="form-range" min="0" max="1000" step="10"
                                               oninput="updatePrice(this.value)" value="@ViewBag.MaxPrice" />
                                        <p class="text-muted small mb-2">Giới hạn trên: <span id="priceValue">@ViewBag.MaxPrice</span> ₫</p>

                                        <hr />

                                        <!-- Additional -->
                                        <h6 class="fw-semibold small mt-3 mb-2">Additional</h6>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="filter" value="fresh" id="fresh" @(ViewBag.Filter == "fresh" ? "checked" : "")>
                                            <label class="form-check-label small" for="fresh">Fresh</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="filter" value="sales" id="sales" @(ViewBag.Filter == "sales" ? "checked" : "")>
                                            <label class="form-check-label small" for="sales">Sales</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="filter" value="discount" id="discount" @(ViewBag.Filter == "discount" ? "checked" : "")>
                                            <label class="form-check-label small" for="discount">Discount</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="filter" value="organic" id="organic" @(ViewBag.Filter == "organic" ? "checked" : "")>
                                            <label class="form-check-label small" for="organic">Organic</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="filter" value="expired" id="expired" @(ViewBag.Filter == "expired" ? "checked" : "")>
                                            <label class="form-check-label small" for="expired">Expired</label>
                                        </div>

                                        <button type="submit" class="btn btn-success w-100 mt-3 rounded-pill">Lọc sản phẩm</button>
                                    </form>
                                </div>
                            </div>

                            <!-- Featured products -->
                            <div class="col-lg-12">
                                <h4 class="mb-3">Featured products</h4>
                                <div class="d-flex align-items-center justify-content-start">
                                    <div class="rounded me-4" style="width: 100px; height: 100px;">
                                        <img src="~/img/featur-1.jpg" class="img-fluid rounded" alt="">
                                    </div>
                                    <div>
                                        <h6 class="mb-2">Big Banana</h6>
                                        <div class="d-flex mb-2">
                                            <i class="fa fa-star text-secondary"></i>
                                            <i class="fa fa-star text-secondary"></i>
                                            <i class="fa fa-star text-secondary"></i>
                                            <i class="fa fa-star text-secondary"></i>
                                            <i class="fa fa-star"></i>
                                        </div>
                                        <div class="d-flex mb-2">
                                            <h5 class="fw-bold me-2">2.99 $</h5>
                                            <h5 class="text-danger text-decoration-line-through">4.11 $</h5>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center my-4">
                                    <a href="#" class="btn border border-secondary px-4 py-3 rounded-pill text-primary w-100">View More</a>
                                </div>
                            </div>

                            <!-- Banner -->
                            <div class="col-lg-12">
                                <div class="position-relative">
                                    <img src="~/img/banner-fruits.jpg" class="img-fluid w-100 rounded" alt="">
                                    <div class="position-absolute" style="top: 50%; right: 10px; transform: translateY(-50%);">
                                        <h3 class="text-secondary fw-bold">Fresh <br> Fruits <br> Banner</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 🔸 CỘT PHẢI - HIỂN THỊ SẢN PHẨM -->
                    <div class="col-lg-9">
                        <div class="row g-4 justify-content-center">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Fruits Shop End-->

<script>
    function updatePrice(value) {
        document.getElementById("priceValue").textContent = value;
        document.querySelector("input[name='maxPrice']").value = value;
    }
</script>
